{
  "@context": ["http://shex.io/context.jsonld", {"foaf": "http://xmlns.com/foaf/0.1/"}],
  "type": "Schema",
  "shapes": {
    "id": "http://schema.example/EmployeeShape",
    "type": "Shape",
    "expression": {
      "type": "TripleConstraint",
      "predicate": "foaf:mbox",
      "valueExpr": {
        "type": "NodeConstraint",
        "values": [
          { "type": "StemRange",
            "stem": {"type": "Wildcard"},
            "exclusions": [
              { "type": "Stem", "stem": "mailto:engineering-" },
              { "type": "Stem", "stem": "mailto:sales-" }
            ]
          }
        ]
      }
    }
  }
}